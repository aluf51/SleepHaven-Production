# Sleep Haven Production Environment Variables

# Node.js Environment
NODE_ENV=production

# Server Configuration
PORT=5000
CORS_ORIGIN=https://sleephaven.ai,https://www.sleephaven.ai

# MongoDB Database
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/sleep-haven?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=<your-secure-jwt-secret-key>
JWT_EXPIRE=30d

# PayPal Configuration
PAYPAL_CLIENT_ID=<your-paypal-live-client-id>
PAYPAL_CLIENT_SECRET=<your-paypal-live-client-secret>

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=<your-stripe-live-publishable-key>
STRIPE_SECRET_KEY=<your-stripe-live-secret-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# SendGrid Configuration
SENDGRID_API_KEY=<your-sendgrid-api-key>
SENDGRID_FROM_EMAIL=receipts@sleephaven.ai
SENDGRID_FROM_NAME=Sleep Haven

# Application URLs
FRONTEND_URL=https://sleephaven.ai
BACKEND_URL=https://api.sleephaven.ai
APP_URL=https://app.sleephaven.ai

# Security Settings
SECURE_COOKIES=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
